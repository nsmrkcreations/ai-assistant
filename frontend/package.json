{
  "name": "ai-assistant-desktop",
  "version": "1.0.0",
  "description": "AI Assistant Desktop Application",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron dist/main.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "electron:dev": "wait-on dist/main.js && electron dist/main.js --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "build": {
    "appId": "com.aiassistant.desktop",
    "productName": "AI Assistant",
    "directories": {
      "output": "release",
      "buildResources": "../assets"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/tests"
        ]
      },
      {
        "from": "../assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "../assets/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "AI Assistant Team",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Assistant"
    },
    "mac": {
      "target": "dmg",
      "icon": "../assets/icons/icon.icns",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "../build/entitlements.mac.plist",
      "entitlementsInherit": "../build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "../assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "../assets/icons/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "Office",
      "synopsis": "AI Assistant Desktop Application - Your Personal AI Employee"
    },
    "appImage": {
      "license": "../LICENSE"
    },
    "deb": {
      "depends": [
        "python3",
        "python3-pip"
      ],
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "python3",
        "python3-pip"
      ]
    },
    "publish": null
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.19",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.14.2"
  }
}
